<% include partials/_header %>
<div class="container">
        <div class="row mt-5">
                <div class="col-md-5">
                        <div class="card">
                            <div class="card-body">
                                    <form action="/update/<%= data.id %>" method="post">
                                        <div class="form-group">
                                        <input type="text" name="name" value="<%= data.name %>" class="form-control" required/>
                                       </div>
                                       <div class="form-group">
                                        <input type="text" name="address" value="<%= data.address %>" class="form-control" required/>
                                        </div>
                                        <div class="form-group">
                                        <input type="text" name="phone" value="<%= data.phone %>" class="form-control" required/>
                                        </div>
                                        <input type="submit" class="btn btn-primary" value="Save Customer" required/>
                                        
                                     </form>
                                    
                                    
                            </div>
                                
                        </div>
                            
                        </div>
        </div>
</div>
